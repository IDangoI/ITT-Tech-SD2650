import java.util.Scanner;

public class main
{
  public static Scanner sc = new Scanner(System.in);

  public static void main(String[] args)
  {

	  int size = 3;
	  char[][] board = new char [size][size];
	  
	  char p1 = 'O';
	  char p2 = 'X';
	  
	  reset(board);
	  
	  System.out.println("Welcom to Tic-Tac-Toe");
	  display(board);
	  
	  System.out.print("Go first? 1or2");
	  int num = sc.nextInt();
	  
	  int empCell = size * size;
	  

	  
	  if (num == 1){//player first
		  System.out.print("\nEnter the row and colum indicies: ");
		  int x = sc.nextInt();
		  int y = sc.nextInt();
		  if(cellCheck(board,x,y) == true){
			  board[x][y] = p1;
			  if(x == 1 && y == 1){// if center. turn 1
				  board[0][0] = p2;
				  display(board);
				  System.out.print("\nEnter the row and colum indicies: ");
				  x = sc.nextInt();
				  y = sc.nextInt();
				  if (cellCheck(board,x,y) == true){//turn 2
					  board[x][y] = p1;
					  if (x == 1 && y ==1){
						  board[2][0] = p2;
						  display(board);
						  System.out.print("\nEnter the row and colum indicies: ");
						  x = sc.nextInt();
						  y = sc.nextInt();
						  if (cellCheck(board,x,y) == true){//turn 3
							  board[x][y] = p1;
							  board[(x-1)*-1+1][(y-1)*-1+1] = p2;
							  display(board);
								  System.out.print("\nEnter the row and colum indicies: ");
								  x = sc.nextInt();
								  y = sc.nextInt();
								  if (cellCheck(board,x,y) == true){//turn 4
									  board[x][y] = p1;
									  if(x != 1 && y != 0){
										  board[1][0] = p2;										  
										  System.out.println("You lose");										  
									  }else if(x == 0 && y ==2){
										  board[1][2] = p2;
									  }
								  }
						  }
					  }
				  }
			  }
		  }
		  
	  }
	  
  }
  
  public static void reset(char[][] brd){
	    for (int i = 0; i < brd.length; i++)
	        for (int j = 0; j < brd[0].length; j++)
	          brd[i][j] = ' ';
  }
  
  public static void display(char[][] brd){
	  	int numRow = brd.length;
	    int numCol = brd[0].length;

	    System.out.println();

	    // First write the column header
	    System.out.print("    ");
	    for (int i = 0; i < numCol; i++)
	    System.out.print(i + "   ");
	    System.out.print('\n');

	    System.out.println(); // blank line after the header

	    // The write the table
	    for (int i = 0; i < numRow; i++) {
	      System.out.print(i + "  ");
	      for (int j = 0; j < numCol; j++) {
	        if (j != 0)
	          System.out.print("|");
	        System.out.print(" " + brd[i][j] + " ");
	      }

	      System.out.println();

	      if (i != (numRow - 1)) {
	        // separator line
	        System.out.print("   ");
	        for (int j = 0; j < numCol; j++) {
	          if (j != 0)
	            System.out.print("+");
	          System.out.print("---");
	        }
	        System.out.println();
	      }
	    }
	    System.out.println();
  }
  
  public static boolean cellCheck(char[][] brd, int _x, int _y){
	  
	  if(brd[_x][_y] != ' '){
		  System.out.println("\n!! The cell is already taken.\nEnter the row and colums");
	  return false;
	  }
	  return true;	  
  }
  public static boolen cellCheck1(){
	  return true;
  }
}